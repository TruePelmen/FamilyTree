<UserControl x:Class="FamilyTree.WPF.UserControls.PersonRecord"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FamilyTree.WPF.UserControls"
             mc:Ignorable="d" 
             Height="50" Width="150" Cursor="Hand" MouseLeftButtonDown="UserControlMouseLeftButtonDown" Margin="0,5,0,5">
    <StackPanel Orientation="Horizontal">
        <Image x:Name="photo" Width="25" Height="40"/>
        <TextBlock Margin="10,0,0,0" x:Name="nameTextBox" TextWrapping="Wrap" Style="{StaticResource MaterialDesignBody2TextBlock}" FontWeight="SemiBold" VerticalAlignment="Center" TextAlignment="Center"/>
    </StackPanel>
</UserControl>
